    {{> "ui/avatar/avatar" id="chat-list-chatImage" src=chatImage}}
    {{> "ui/pTag/pTag" id="chat-list-chatName" value=chatName}}
    {{> "ui/pTag/pTag" id="chat-list-time" value=time style="p-tag__small gray"}}
    {{> "ui/pTag/pTag" id="chat-list-lastMessage" value=lastMessage style="p-tag__medium gray"}}
