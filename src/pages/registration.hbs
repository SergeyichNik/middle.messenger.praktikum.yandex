{{!< desktop}}

<div class="container">
    <div class="registration-page">
        <form class="registration-page__top">
            {{> "ui/page-title/pageTitle" title="Регистрация"}}
            {{> "ui/input/input" name="email" fieldName="Почта" type="text"}}
            {{> "ui/input/input" name="login" fieldName="Логин" type="text"}}
            {{> "ui/input/input" name="first_name" fieldName="Имя" type="text"}}
            {{> "ui/input/input" name="second_name" fieldName="Фамилия" type="text"}}
            {{> "ui/input/input" name="phone" fieldName="Телефон" type="tel"}}
            {{> "ui/input/input" name="password" fieldName="Пароль" type="password"}}
            {{> "ui/input/input" name="password" fieldName="Подтердить пароль" type="password"}}
        </form>
        <div class="registration-page__bottom">
            {{> "ui/button/button" style="primary fill" text="Зарегестрироваться" type="submit"}}
            {{> "ui/link/link" text="Войти" href="authorization.hbs"}}
        </div>
    </div>
</div>